<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/ll_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_item_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_dot"/>

    <TextView
        android:id="@+id/tv_item_news_ex_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="博时中证淘金大数据100指数型证券投资基金博时中证淘金大数据100指数型证券投资基金"
        android:singleLine="true"
        android:layout_toRightOf="@+id/iv_item_dot"
        android:layout_toLeftOf="@+id/tv_item_news_date"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_news_ex_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【农技服务】"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/ll_title_container"/>

    <TextView
        android:id="@+id/tv_item_news_ex_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05-25"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_title_container"/>

</RelativeLayout>
